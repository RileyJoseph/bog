      <div class="btn-group btn-group-justified" role="group" aria-label="...">
        <div class="btn-group" role="group">
          <a class='btn btn-default' href='/'>Home</a>
        </div>
        <div class="btn-group" role="group">
          <a class="btn btn-default" href='/beasts'>View all beasts</a>
        </div>
