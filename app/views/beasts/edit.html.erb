<center>
<h1>Edit <%= @beast.name %></h1>
  <div class="input-group">

    <%= bootstrap_form_for(@beast) do |f| %>
    <%= f.text_field :name, hide_label: true, placeholder: "Enter a beast" %>
    <%= f.text_field :description, hide_label: true, placeholder: "Description" %>
    <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>

  </div>
</center>